{
  "name": "micro-tools",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint:md": "markdownlint-cli2 ./packages-**/**/*.md",
    "lint:cspell": "cspell lint **/*.ts **/README.md **/*.tsx **/*.vue --no-progress",
    "lint:depcheck": "depcheck",
    "prepare": "husky",
    "commit": "cz"
  },
  "homepage": "https://github.com/Not-have/micro-tools/",
  "bugs": "https://github.com/Not-have/micro-tools/issues",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "browserslist": "catalog:",
    "commitizen": "catalog:",
    "commitlint": "catalog:",
    "cspell": "catalog:",
    "cz-git": "catalog:",
    "depcheck": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "markdownlint-cli2": "catalog:",
    "only-allow": "catalog:"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.12.0"
  },
  "lint-staged": {
    "*.md": "markdownlint-cli2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
