{
  "name": "micro-tools",
  "version": "1.0.0",
  "description": "Micro tools.",
  "private": true,
  "keywords": [
    "Vue hooks",
    "Vue Ui",
    "Vue Components",
    "Vue hooks",
    "Vue config",
    "Vue directives",
    "Vue echarts",
    "Element-plus extra",
    "React hooks",
    "React Ui",
    "Storybook vue demo",
    "Micro rc container",
    "eslint-conf",
    "stylelint-conf"
  ],
  "scripts": {
    "boot": "pnpm run clear && pnpm install && pnpm run clear:lock",
    "clear": "pnpm --filter \"./packages-**/**\" clear && rm -fr node_modules && pnpm run clear:store && pnpm run clear:lock",
    "clear:lock": "rm -fr pnpm-lock.yaml && rm -fr package-lock.json && rm -fr lerna-debug.log",
    "clear:store": "rm -fr .pnpm-store",
    "preinstall": "npx only-allow pnpm",
    "lint:md": "markdownlint-cli2 ./packages-**/**/*.md",
    "lint:cspell": "cspell lint **/*.ts **/README.md **/*.tsx **/*.vue --no-progress",
    "lint:PkgJson": "npmPkgJsonLint \"./packages-**/**/package.json\"",
    "lint:depcheck": "depcheck",
    "prepare": "husky",
    "commit": "cz"
  },
  "homepage": "https://github.com/Not-have/micro-tools/",
  "bugs": "https://github.com/Not-have/micro-tools/issues",
  "repository": "git@github.com:Not-have/micro-tools.git",
  "license": "MIT",
  "author": {
    "email": "2236472089@qq.com",
    "name": "Li Yong"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "browserslist": "catalog:",
    "commitizen": "catalog:",
    "commitlint": "catalog:",
    "cspell": "catalog:",
    "cz-git": "catalog:",
    "depcheck": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "markdownlint-cli2": "catalog:",
    "npm-package-json-lint": "catalog:",
    "npm-package-json-lint-config-default": "catalog:",
    "only-allow": "catalog:"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.12.0"
  },
  "lint-staged": {
    "package.json": "npmPkgJsonLint",
    "*.md": "markdownlint-cli2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
