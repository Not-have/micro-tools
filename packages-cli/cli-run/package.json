{
  "name": "@mt-kit/cli-run",
  "version": "1.2.0",
  "description": "一个用于在 monorepo 中智能运行脚本的 CLI 工具",
  "keywords": [
    "run",
    "mt-cli-run"
  ],
  "homepage": "https://not-have.github.io/micro-tools/",
  "bugs": {
    "url": "https://github.com/Not-have/micro-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Not-have/micro-tools.git"
  },
  "license": "MIT",
  "author": "Li Yong",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && unbuild",
    "stub": "pnpm clean && unbuild --stub",
    "prepublishOnly": "pnpm build"
  },
  "files": [
    "README.md",
    "bin",
    "dist"
  ],
  "bin": {
    "mt-cli-run": "bin/index.mjs"
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@clack/prompts": "catalog:",
    "@manypkg/get-packages": "catalog:",
    "cac": "catalog:",
    "execa": "catalog:",
    "find-up": "catalog:",
    "glob": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@mt-kit/ts-config": "workspace:^",
    "@types/node": "catalog:",
    "unbuild": "catalog:"
  }
}
