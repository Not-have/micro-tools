{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015",
            "es2017"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "jsx": "react",
    },
    "include": [
        "src",
        "src/**/*.ts",
        "stories/**/*.ts",
        "stories/**/*.tsx"
    ]
}