{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "scripthost",
      "dom.iterable"
    ],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
