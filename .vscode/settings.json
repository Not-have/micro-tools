{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .code-workspace, .browserslistrc, .node-version, .gitignore, .editorconfig, .npmrc, .gitattributes",
    "eslint.config.js": ".eslint*, .oxlint*, .prettier*, depcheck.config.js, .npmpackagejsonlintrc.cjs, cspell.json, commitlint.config.cjs, .npmpackagejsonlintrc-ignore, .depcheckrc.yml, .markdownlint.yaml, stylelint.config.mjs",
    "README.md": "LICENSE"
  }
}
