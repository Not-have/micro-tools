// "extends": "@vue/tsconfig/tsconfig.json", 取消这个继承，ts 版本吗问题
{
  "compilerOptions": {
      "composite": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": ".",
      "verbatimModuleSyntax": false,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "useDefineForClassFields": true,
      "jsx": "preserve",
      "noImplicitThis": true,
      "strict": true,
      "isolatedModules": true,
      "target": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": false,
      "paths": {
          "@/*": [
              "./src/*"
          ],
          "@fetch/*": [
              "./src/utils/fetch/*"
          ]
      },
      "lib": [
          "esnext",
          "dom"
      ],
      "types": [
          "@dcloudio/types",
          "@uni-helper/uni-app-types",
          "@uni-helper/uni-ui-types",
          "node"
      ]
  },
  "vueCompilerOptions": {
      "target": 3,
      "nativeTags": [
          "block",
          "template",
          "component",
          "slot"
      ]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
  ]
}