{
  "version": "independent",
  "npmClient": "pnpm",
  "packages": [
    "packages-vue/vue-hooks",
    "packages-style",
    "packages-eslint-conf",
    "packages-stylelint-conf",
    "packages-utils",
    "packages-rc",
    "packages-conf",
    "packages-enum",
    "packages-types"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "conventionalCommits": false,
      "message": "[skip ci] chore: release",
      "ignoreChanges": [
        "*.md",
        ".storybook",
        "stories",
        ".npmignore",
        "**/node_modules/**"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
