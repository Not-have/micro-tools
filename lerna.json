{
  "version": "independent",
  "npmClient": "pnpm",
  "packages": [
    "packages*/**"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "conventionalCommits": false,
      "message": "[skip ci] chore: release",
      "ignoreChanges": [
        "*.md",
        ".storybook",
        "stories",
        ".npmignore",
        "**/node_modules/**"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
